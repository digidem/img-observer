{
  "name": "document-change-observer",
  "version": "0.0.0",
  "description": "Observers an HTML document (or any element) for added or removed nodes",
  "main": "index.js",
  "scripts": {
    "build": "browserify index.js --standalone DocumentChangeObserver -o dist/document_change_observer.js",
    "postbuild": "uglifyjs dist/document_change_observer.js -c -m -o dist/document_change_observer.min.js",
    "lint": "standard index.js",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digidem/document-change-observer.git"
  },
  "keywords": [
    "MutationObserver"
  ],
  "author": "Gregor MacLennan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digidem/document-change-observer/issues"
  },
  "homepage": "https://github.com/digidem/document-change-observer",
  "devDependencies": {
    "browserify": "^12.0.1",
    "standard": "^5.4.1",
    "uglify-js": "^2.6.1"
  }
}
